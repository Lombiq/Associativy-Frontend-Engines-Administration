@model Associativy.Frontends.Administration.Models.Pages.Admin.AssociativyManageGraphAuthorizationPart

<div id="associativy-administration-authorization-container">
    <fieldset>
        <legend>@T("Users authorized to view the graph")</legend>
        <ol>
            <li>@Html.Hint(T("Only users having the selected roles will be able to view the graph through frontend engines:"))
                <ul>
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        <li>
                            @Html.HiddenFor(m => m.Roles[i].Name)
                            @Html.CheckBoxFor(m => m.Roles[i].IsAuthorized)
                            <label for="@Html.FieldIdFor(m => m.Roles[i].IsAuthorized)" class="forcheckbox">@Model.Roles[i].Name</label>
                        </li>
                    }
                </ul>
            </li>
        </ol>
    </fieldset>
</div>